<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:orientation="vertical"
    android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <!-- chart布局 -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/fit_chart"
                android:layout_width="1000dp"
                android:layout_height="650dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <!--拟合函数按钮布局 -->
            <TableLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1080dp"
                android:layout_marginTop="50dp"
                android:stretchColumns="*">
                <TableRow>
                    <!--指数-->
                    <Button
                        android:id="@+id/index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/a1"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <!--对数 -->
                    <Button
                        android:id="@+id/logarithm_fun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/b1"/>
                </TableRow>
                <TableRow android:layout_marginTop="10dp">
                    <!--线性函数 -->
                    <Button
                        android:id="@+id/line_fun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/c1"/>
                </TableRow>

                <TableRow android:layout_marginTop="50dp">
                    <Button
                        android:id="@+id/save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/anniu_5"/>
                </TableRow>
                <TableRow   android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/export_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/anniu_6"/>
                </TableRow>
                <TableRow  android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/back_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/anniu_4"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>

</RelativeLayout>